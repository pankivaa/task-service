{
  "info": {
    "name": "TaskService API",
    "description": "Postman collection для TaskService (FastAPI)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8000"
    },
    {
      "key": "taskId",
      "value": ""
    }
  ],
  "item": [
    {
      "name": "Health check",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/health",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "health"
          ]
        }
      }
    },
    {
      "name": "Create task",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"name\": \"Test parsing task\",\n  \"url\": \"https://example.com\",\n  \"status\": \"created\",\n  \"result\": null\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tasks",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks"
          ]
        }
      }
    },
    {
      "name": "Get tasks list",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/tasks?limit=10&offset=0",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks"
          ],
          "query": [
            {
              "key": "limit",
              "value": "10"
            },
            {
              "key": "offset",
              "value": "0"
            }
          ]
        }
      }
    },
    {
      "name": "Get task by id",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks",
            "{{taskId}}"
          ]
        }
      }
    },
    {
      "name": "Update task",
      "request": {
        "method": "PATCH",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"status\": \"finished\",\n  \"result\": {\n    \"items\": 10\n  }\n}"
        },
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks",
            "{{taskId}}"
          ]
        }
      }
    },
    {
      "name": "Delete task",
      "request": {
        "method": "DELETE",
        "url": {
          "raw": "{{baseUrl}}/api/tasks/{{taskId}}",
          "host": [
            "{{baseUrl}}"
          ],
          "path": [
            "api",
            "tasks",
            "{{taskId}}"
          ]
        }
      }
    }
  ]
}